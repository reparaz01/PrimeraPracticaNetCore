@model List<PrimeraPracticaNetCore.Models.Zapatilla>

<h1>Todas las Zapatillas</h1>

<a asp-controller="OtraPagina" asp-action="Index" class="link"> Subir Imagenes </a>
<br />
<br />

<div style="width:60vh; justify-items:center">
    <ul class="list-group">
        @foreach (var zapatilla in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@zapatilla.Nombre</span>
                <div>
                    <a asp-controller="Zapatillas" asp-action="Details" asp-route-idzapatilla="@zapatilla.Nombre" class="btn btn-danger">CLASICO</a>
                    <a asp-controller="Zapatillas" asp-action="Details" asp-route-idzapatilla="@zapatilla.Nombre" class="btn btn-success"> AJAX</a>
                </div>
            </li>
        }
    </ul>
</div>
